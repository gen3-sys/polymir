{
  "name": "polymir-backend",
  "version": "1.0.0-alpha",
  "description": "Polymir P2P Voxel MMO Backend - Dual Database + IPFS + libp2p",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "migrate:central": "psql $CENTRAL_DB_URL -f migrations/001_central_library_schema.sql",
    "migrate:world": "psql $WORLD_DB_URL -f migrations/002_world_server_schema.sql",
    "migrate": "npm run migrate:central && npm run migrate:world",
    "start": "node src/server.js",
    "test": "node --test"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.2",
    "@libp2p/bootstrap": "^12.0.10",
    "@libp2p/gossipsub": "^15.0.11",
    "@libp2p/identify": "^4.0.9",
    "@libp2p/kad-dht": "^16.1.2",
    "@libp2p/mplex": "^12.0.10",
    "@libp2p/noise": "^1.0.1",
    "@libp2p/tcp": "^11.0.9",
    "@libp2p/websockets": "^10.1.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ipfs-http-client": "^60.0.1",
    "jsonwebtoken": "^9.0.2",
    "kubo-rpc-client": "^6.0.2",
    "libp2p": "^3.1.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
